{
  "manifest_version": 3,
  "name": "Google Place ID Display",
  "version": "1.0",
  "description": "Effortlessly display the Google Place ID in the sidebar of the company you're currently viewing on Google Search.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting"
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "128": "icons/128.png"
  },
  "action": {},
  "content_scripts": [
    {
      "matches": [
        "https://www.google.nl/*",
        "https://www.google.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}